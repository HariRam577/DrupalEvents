# Ignore Drupal core
/web/core
/web/modules/contrib
/web/themes/contrib
/web/profiles/contrib

# Ignore vendor
/vendor

# Ignore files directories
/web/sites/*/files

# Ignore settings with credentials
/web/sites/*/settings.local.php
/web/sites/*/services.local.yml

# Keep custom code
!/web/modules/custom
!/web/themes/custom

# Ignore config (we'll export and commit separately)
# Actually, we WANT to commit config for this project
# So DON'T ignore /config

# Ignore DDEV
/.ddev/.gitignore
/.ddev/traefik
/.ddev/db_snapshots